<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">

  <title>My Blog</title>
</head>
<body>
  <header>
    <h1>My Blog</h1>
    <a href="/create" class="btn">Create New Post</a>
  </header>

  <section>
    <% if (posts.length > 0) { %>
      <% posts.forEach((post, index) => { %>
        <article>
          <h2><a href="/post/<%= index %>"><%= post.title %></a></h2>
          <a href="/post/<%= index %>/edit">Edit</a>
          <form action="/post/<%= index %>/delete" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </article>
      <% }); %>
    <% } else { %>
      <p>No posts yet. <a href="/create">Create a new post</a> to get started!</p>
    <% } %>
  </section>

</body>
</html>
